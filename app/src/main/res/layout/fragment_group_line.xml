<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="80dp"
android:layout_marginBottom="2dp"
android:layout_marginTop="3dp"
app:cardBackgroundColor="#FCF6F5"
app:cardCornerRadius="0dp"
app:cardElevation="2dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cr_profile_image"
        android:src="@drawable/default_profile"
        android:padding="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cr_friend_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="@font/esamanru_medium"
                android:text="TextView"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="#7b9acc"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cr_last_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="TextView"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/esamanru_light"
                android:textColor="#333333"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cr_last_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="60dp"
            android:maxLines="2"
            android:text="TextView"
            android:fontFamily="@font/esamanru_light"
            android:textColor="#333333" />
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>