<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="방 이름"
        android:textSize="24sp"
        android:theme="@style/BoldFont" />

    <TextView
        android:id="@+id/textViewRoomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="16sp"
        android:theme="@style/LightFont" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="그룹 설명"
        android:textSize="16sp"
        android:theme="@style/MediumFont" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewRoomComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹 설명"
            android:textSize="16sp"
            android:theme="@style/LightFont" />
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUsersProfile"
        tools:context=".RoomDetailFragment.java"
        tools:listitem="@layout/teamate_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/joinRequestButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="12dp"
            android:text="그룹 참가 신청하기"
            android:textSize="16sp"
            android:theme="@style/MediumFont" />

        <Button
            android:id="@+id/exitRoom"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:padding="12dp"
            android:text="그룹 나가기"
            android:textSize="16sp"
            android:theme="@style/MediumFont" />
    </LinearLayout>
</LinearLayout>
